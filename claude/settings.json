{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_NOTIFICATION_SCRIPT": "~/.claude/notify.sh"
  },
  "permissions": {
    "allow": [
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(git init:*)",
      "Bash(git fetch:*)",
      "Bash(git ls-tree:*)",
      "Bash(git merge-base:*)",
      "Bash(git worktree list:*)",
      "Bash(git commit:*)",
      "Bash(git stash push:*)",
      "Bash(git stash pop:*)",
      "Bash(git stash list:*)",
      "Bash(git push:*)",
      "Bash(gh api:*)",
      "Bash(gh pr:*)",
      "Bash(claude config list:*)",
      "Bash(grep:*)",
      "Bash(uv add:*)",
      "Bash(uv run:*)",
      "Bash(uv sync:*)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)"
    ],
    "deny": [
      "Bash(git checkout --:*)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/notify.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 1
  },
  "alwaysThinkingEnabled": true,
  "installMethod": "native",
  "includeCoAuthoredBy": false
}
