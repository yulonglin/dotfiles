{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "ENABLE_TOOL_SEARCH": "1",
    "BASH_MAX_OUTPUT_LENGTH": "100000"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/watchdog_start.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/watchdog_mark.sh working",
            "timeout": 3
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/watchdog_mark.sh idle",
            "timeout": 3
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/watchdog_stop.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/hooks/check_loop_bypass.sh",
            "timeout": 5
          }
        ]
      }
    ]
  },
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(grep *)",
      "Bash(rg *)",
      "Bash(find *)",
      "Bash(fd *)",
      "Bash(ls *)",
      "Bash(eza *)",
      "Bash(cat *)",
      "Bash(bat *)",
      "Bash(head *)",
      "Bash(tail *)",
      "Bash(du *)",
      "Bash(dust *)",
      "Bash(df *)",
      "Bash(duf *)",
      "Bash(echo *)",
      "Bash(mkdir *)",
      "Bash(sleep *)",
      "Bash(tee *)",
      "Bash(chmod *)",
      "Bash(time *)",
      "Bash(touch *)",
      "Bash(shortcuts list *)",
      "Bash(git checkout *)",
      "Bash(git init *)",
      "Bash(git fetch *)",
      "Bash(git ls-tree *)",
      "Bash(git merge-base *)",
      "Bash(git worktree list *)",
      "Bash(git add *)",
      "Bash(git diff *)",
      "Bash(git commit:*)",
      "Bash(git stash push *)",
      "Bash(git stash pop *)",
      "Bash(git stash list *)",
      "Bash(git push *)",
      "Bash(git restore *)",
      "Bash(GIT_EDITOR=true git add *)",
      "Bash(GIT_EDITOR=true git commit *)",
      "Bash(GIT_EDITOR=true git diff *)",
      "Bash(GIT_EDITOR=true git status *)",
      "Bash(gh api *)",
      "Bash(gh pr *)",
      "Bash(claude config list *)",
      "Bash(uv add *)",
      "Bash(uv run *)",
      "Bash(uv sync *)",
      "Bash(python *)",
      "Bash(python3 *)",
      "Bash(uv run python *)",
      "Bash(uv run python3 *)",
      "Bash(HYDRA_FULL_ERROR=1 uv run python *)",
      "Bash(pytest *)",
      "Bash(uv run pytest *)",
      "Bash(for *)",
      "Bash(while *)",
      "Bash(bun run dev *)",
      "Bash(bun run test *)",
      "Bash(bun run build *)",
      "Bash(bun run lint *)",
      "Bash(bun run start *)",
      "Bash(npm run test *)",
      "Bash(npm run build *)",
      "Bash(npm run lint *)",
      "Bash(npm run start *)",
      "WebSearch",
      "WebFetch",
      "Read",
      "Read(//tmp/claude/**)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(rm -r *)",
      "Bash(shred *)",
      "Bash(> *)",
      "Bash(truncate *)",
      "Bash(git checkout -- *)",
      "Bash(git reset --hard *)",
      "Bash(git clean *)",
      "Bash(git push --force *)",
      "Bash(git push --force-with-lease *)",
      "Bash(git push -f *)",
      "Bash(git branch -D *)",
      "Bash(dd *)",
      "Bash(mkfs *)",
      "Bash(fdisk *)",
      "Bash(chmod -R 777 *)",
      "Bash(chown -R *)",
      "Bash(shutdown *)",
      "Bash(reboot *)",
      "Bash(halt *)",
      "Bash(wipefs *)",
      "Bash(chmod 000 *)",
      "Bash(mv / *)",
      "Bash(bash -c *)",
      "Bash(sh -c *)",
      "Bash(zsh -c *)",
      "Bash(eval *)",
      "Bash(exec *)",
      "Bash(xargs sh *)",
      "Bash(xargs bash *)",
      "Bash(sudo *)"
    ],
    "ask": [
      "Bash(kill *)",
      "Bash(killall *)",
      "Bash(pkill *)",
      "Bash(env *)",
      "Bash(nohup *)",
      "Bash(python -c *)",
      "Bash(python3 -c *)",
      "Bash(node -e *)",
      "Bash(perl -e *)",
      "Bash(ruby -e *)",
      "Bash(timeout *)",
      "Bash(find * -exec *)",
      "Bash(find * -execdir *)",
      "Bash(bun run *)",
      "Bash(npm run *)",
      "Bash(xargs *)",
      "Bash(curl *)",
      "Bash(wget *)",
      "Bash(ssh *)",
      "Bash(scp *)",
      "Bash(nc *)",
      "Bash(cat)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/.envrc)"
    ],
    "defaultMode": "plan"
  },
  "statusLine": {
    "type": "command",
    "command": "claude-tools statusline",
    "padding": 1
  },
  "enabledPlugins": {
    "superpowers@claude-plugins-official": true,
    "hookify@claude-plugins-official": true,
    "plugin-dev@claude-plugins-official": true,
    "commit-commands@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "context7@claude-plugins-official": true,
    "core@ai-safety-plugins": true,
    "research@ai-safety-plugins": false,
    "writing@ai-safety-plugins": false,
    "code@ai-safety-plugins": false,
    "workflow@ai-safety-plugins": false,
    "viz@ai-safety-plugins": false,
    "Notion@claude-plugins-official": false,
    "figma@claude-plugins-official": false,
    "ui-ux-pro-max@ui-ux-pro-max-skill": false,
    "frontend-design@claude-plugins-official": false,
    "huggingface-skills@claude-plugins-official": false,
    "vercel@claude-plugins-official": false,
    "coderabbit@claude-plugins-official": false,
    "code-simplifier@claude-plugins-official": false,
    "security-guidance@claude-plugins-official": false,
    "code-review@claude-plugins-official": false,
    "pyright-lsp@claude-plugins-official": false,
    "typescript-lsp@claude-plugins-official": false,
    "ralph-loop@claude-plugins-official": false,
    "serena@claude-plugins-official": false,
    "feature-dev@claude-plugins-official": false,
    "stripe@claude-plugins-official": false,
    "claude-code-setup@claude-plugins-official": false,
    "playwright@claude-plugins-official": false,
    "supabase@claude-plugins-official": false,
    "pr-review-toolkit@claude-plugins-official": false,
    "playground@claude-plugins-official": false,
    "linear@claude-plugins-official": false
  },
  "outputStyle": "10x Mentor",
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "allowUnsandboxedCommands": true,
    "network": {
      "allowedDomains": [
        "api.anthropic.com",
        "mcp-proxy.anthropic.com",
        "api.githubcopilot.com",
        "mcp.context7.com",
        "http-intake.logs.us5.datadoghq.com",
        "eu-central-1-1.aws.cloud2.influxdata.com",
        "oauth2.googleapis.com",
        "cloudcode-pa.googleapis.com",
        "github.com",
        "api.github.com",
        "mcp.linear.app"
      ]
    },
    "excludedCommands": [
      "gh",
      "git",
      "docker"
    ]
  },
  "alwaysThinkingEnabled": true,
  "autoUpdatesChannel": "latest",
  "plansDirectory": ".claude/plans",
  "skipDangerousModePermissionPrompt": true,
  "chrome": {
    "enabled": false
  },
  "teammateMode": "auto",
  "installMethod": "native"
}
