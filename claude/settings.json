{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(find:*)",
      "Bash(fd:*)",
      "Bash(ls:*)",
      "Bash(eza:*)",
      "Bash(cat:*)",
      "Bash(bat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(du:*)",
      "Bash(dust:*)",
      "Bash(df:*)",
      "Bash(duf:*)",
      "Bash(echo:*)",
      "Bash(mkdir:*)",
      "Bash(sleep:*)",
      "Bash(nohup:*)",
      "Bash(tee:*)",
      "Bash(git init:*)",
      "Bash(git fetch:*)",
      "Bash(git ls-tree:*)",
      "Bash(git merge-base:*)",
      "Bash(git worktree list:*)",
      "Bash(git add:*)",
      "Bash(git diff:*)",
      "Bash(git commit:*)",
      "Bash(git stash push:*)",
      "Bash(git stash pop:*)",
      "Bash(git stash list:*)",
      "Bash(git push:*)",
      "Bash(git restore:*)",
      "Bash(GIT_EDITOR=true git add:*)",
      "Bash(GIT_EDITOR=true git diff:*)",
      "Bash(GIT_EDITOR=true git status:*)",
      "Bash(gh api:*)",
      "Bash(gh pr:*)",
      "Bash(claude config list:*)",
      "Bash(uv add:*)",
      "Bash(uv run:*)",
      "Bash(uv sync:*)",
      "Bash(python:*)",
      "Bash(python3:*)",
      "Bash(uv run python:*)",
      "Bash(uv run python3:*)",
      "Bash(HYDRA_FULL_ERROR=1 uv run python:*)",
      "Bash(pytest:*)",
      "Bash(uv run pytest:*)",
      "Bash(for:*)",
      "Bash(while:*)",
      "WebSearch",
      "WebFetch(domain:gitlab.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:docs.astral.sh)",
      "WebFetch(domain:openreview.net)",
      "WebFetch(domain:neurips.cc)",
      "WebFetch(domain:iclr.cc)",
      "WebFetch(domain:icml.cc)",
      "WebFetch(domain:papers.nips.cc)",
      "WebFetch(domain:proceedings.mlr.press)",
      "Read",
      "Read(//tmp/claude/**/tasks/**)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(rm -r:*)",
      "Bash(shred:*)",
      "Bash(> :*)",
      "Bash(truncate:*)",
      "Bash(git checkout --:*)",
      "Bash(git reset --hard:*)",
      "Bash(git clean:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git branch -D:*)",
      "Bash(dd:*)",
      "Bash(mkfs:*)",
      "Bash(fdisk:*)",
      "Bash(chmod -R 777:*)",
      "Bash(chown -R:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(sudo:*)",
      "Read(.env**)"
    ],
    "defaultMode": "plan"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto_log.sh START"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/check_secrets.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/auto_log.sh END"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/truncate_output.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 1
  },
  "enabledPlugins": {
    "swift-lsp@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true
  },
  "alwaysThinkingEnabled": true,
  "installMethod": "native"
}
