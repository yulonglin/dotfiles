#!/bin/bash
# Sync secrets with GitHub gist
# Wrapper for scheduled execution

set -euo pipefail

# Get dotfiles directory (assumes this script is in custom_bins/)
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
DOT_DIR="$(cd "$SCRIPT_DIR/.." && pwd)"

# Source helpers
source "$DOT_DIR/scripts/shared/helpers.sh"

# Run secrets sync
log_info "Starting scheduled secrets sync..."
if sync_secrets; then
    log_success "Secrets sync completed successfully"
    exit 0
else
    log_error "Secrets sync failed"
    exit 1
fi
